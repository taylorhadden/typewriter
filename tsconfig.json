{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "react",
    "strict": true,
    "lib": ["es2015", "es2016", "es2017", "ES2020", "dom"],
    "types": ["svelte"],
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}